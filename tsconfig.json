{
  "compilerOptions": {
    /* Langage et Environnement */
    "target": "es2022", // Cible une version moderne de ECMAScript
    "lib": ["es2022"], // Inclut les declarations de bibliotheques pour les fonctions recentes
    "module": "commonjs", // Systeme de modules a generer (commonjs pour Node.js)
    "rootDir": "./src", // Votre code source est dans le dossier 'src'
    "outDir": "./dist", // Les fichiers JS compiles iront dans le dossier 'dist'

    /* Systemes de Modules */
    "esModuleInterop": true, // Permet les imports de style ES6/TypeScript pour les modules CommonJS
    "forceConsistentCasingInFileNames": true, // Force la casse coherente des noms de fichiers

    /* Verifications de Type */
    "strict": true, // Active un ensemble strict d'options de verification de type (recommande)
    "skipLibCheck": true, // Ignore la verification des fichiers de declaration de bibliotheques

    /* Emet des fichiers */
    "sourceMap": true, // Genere des fichiers .map pour le debuggage

    /* Options experimentales */
    "experimentalDecorators": true, // Active le support des decorators (necessaire pour TypeORM)
    "emitDecoratorMetadata": true, // Emet des metadonnees de design (necessaire pour TypeORM)

    /* Options supplementaires */
    // S'assurer que votre code source est inclus
    "resolveJsonModule": true, // Permet l'import de fichiers .json
  },
  "include": [
    "src/**/*.ts" // Inclut tous les fichiers .ts dans le dossier src et ses sous-dossiers
  ],
  "exclude": [
    "node_modules" // Exclut le dossier node_modules
  ]
}